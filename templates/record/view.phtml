          <?php endif; ?>
          <li>
            <a href="<?= $this->recordLink()->getUrl($this->scrollData['previousRecord']) ?>" title="<?= $this->transEscAttr('Previous Search Result') ?>" rel="nofollow">&laquo;</a>
